<?xml version="1.0" encoding="utf-8" ?>

<resources>
    <style name="ActivityTheme" parent="android:style/Theme.NoTitleBar">
        <item name="android:background">#000000</item>         <!-- This line is changing the actionbar colour. -->
        <item name="android:windowBackground">#000000</item>
        <item name="android:colorBackground">#000000</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <!-- For details: https://developer.android.com/guide/topics/display-cutout -->
        <!-- For context: https://forum.juce.com/t/screen-position-problem-on-landscape-orientation-with-speaker-cutout/42282/8 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>
